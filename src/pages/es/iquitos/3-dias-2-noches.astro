---
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from '../../../components/Breadcrumb.astro';
import data from "../../../i18n/es/iquitos/3-dias-2-noches.json";
---

<Layout>
    <Breadcrumb image="/bc-iquitos.png" title="Iquitos" alt="Image of Iquitos" lang="es"/>

    <section class="bg-white py-16 px-4">
        <div class="max-w-6xl mx-auto">

            <!-- TÃ­tulo -->
            <header class="text-center mb-16">
                <h2 class="text-3xl sm:text-5xl font-extrabold text-gray-900 tracking-tight leading-snug mb-3">
                    {data.title}
                </h2>
                {data.certificate && (
                    <div class="inline-flex items-center gap-2 px-4 py-1 bg-gray-100 rounded-full shadow-sm text-sm sm:text-base text-gray-700 font-medium">
                        <i class="fas fa-certificate text-red-500"></i>
                        {data.certificate}
                    </div>
                )}
            </header>

            <!-- Resumen -->
            {data.summary && (
                <section class="mb-14">
                    <div class="grid md:grid-cols-2 gap-6 text-gray-800 text-base font-medium">
                        <div class="bg-white border-l-4 border-green-600 p-6 rounded-2xl shadow hover:shadow-md transition">
                            <h3 class="text-lg font-bold text-green-800 mb-2 uppercase tracking-wide">Ruta:</h3>
                            <p class="leading-relaxed">{data.summary.route}</p>
                        </div>
                        <div class="bg-white border-l-4 border-green-600 p-6 rounded-2xl shadow hover:shadow-md transition space-y-3">
                            <div>
                                <h4 class="text-sm text-green-700 font-semibold uppercase mb-1">Tipo de Cliente:</h4>
                                <p>{data.summary.clientType}</p>
                            </div>
                            <div>
                                <h4 class="text-sm text-green-700 font-semibold uppercase mb-1">Tipo de Servicio:</h4>
                                <p>{data.summary.serviceType}</p>
                            </div>
                        </div>
                    </div>
                </section>
            )}

            <!-- Itinerario -->
            {data.itinerary.map((day) => (
                <article class="relative border-l-4 border-green-600 bg-white rounded-2xl shadow-md p-6 mb-10 transition hover:shadow-lg">
                    <span class="absolute -left-2.5 top-6 w-4 h-4 bg-green-600 border-4 border-white rounded-full shadow"></span>
                    <h4 class="text-2xl sm:text-3xl font-extrabold text-green-800 leading-tight mb-6 tracking-tight">
                        {day.day}
                    </h4>
                    <ul class="space-y-3 text-gray-800">
                        {day.activities.map((act) => (
                            <li class="flex gap-4">
                                <time class="text-sm font-semibold text-green-700 min-w-[80px]">{act.time}</time>
                                <p>{act.text}</p>
                            </li>
                        ))}
                    </ul>
                </article>
            ))}

            <!-- Sistema Incluye -->
            <div class="bg-white rounded-2xl shadow-md p-6 mb-10 border-l-4 border-green-600">
                <h3 class="text-3xl font-extrabold text-green-800 mb-6 tracking-tight">
                    {data.includesTitle}
                    <br />
                    <span class="text-base font-semibold text-green-700">{data.includesSubtitle}</span>
                </h3>
                <ul class="list-disc list-inside space-y-2 text-gray-800 mb-6">
                    {data.includes.map((item) => (
                        <li>{item}</li>
                    ))}
                </ul>
            </div>
        </div>
    </section>
</Layout>