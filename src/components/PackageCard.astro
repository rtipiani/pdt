---
const { title, duration, image, link, i18n } = Astro.props;
---
<div class="bg-gray-50 bg-opacity-70 rounded-2xl shadow-md hover:shadow-xl transition-shadow duration-300 px-6 py-6">
    <img src={image} alt={`Imagen del paquete ${title}`} class="w-full h-48 object-cover rounded-xl mb-6" loading="lazy" />
  
    <div class="mb-4">
        <h3 class="text-gray-800 text-xl font-semibold leading-snug">
            <a href={link} class="block">
                {title}
            </a>
        </h3>
        <div class="flex items-center gap-2 mt-1">
            <span class="bg-orange-500 text-white text-sm font-semibold px-3 py-1 rounded-full shadow-sm">
                {duration}
            </span>
        </div>
    </div>

    <hr class="border-orange-300 mb-6" />

    <a href={link} aria-label={`Consultar paquete turÃ­stico: ${title} ${duration}`} class="flex items-center justify-between group">
        <span class="text-base font-semibold text-gray-900 group-hover:text-orange-600 transition-colors">
            {i18n.consultNow}
        </span>
        <span class="w-9 h-9 bg-gray-900 text-white rounded-full flex items-center justify-center group-hover:bg-orange-500 transition-colors">
            <i class="fas fa-angle-right text-lg"></i>
        </span>
    </a>
</div>